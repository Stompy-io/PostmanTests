						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{host_aws}}/ce/get-reservation-recommendation/?caid={{cloud_account_id}}&groupby=subscription",
							"host": [
								"{{host_aws}}"
							],
							"path": [
								"ce",
								"get-reservation-recommendation",
								""
							],
							"query": [
								{
									"key": "caid",
									"value": "{{cloud_account_id}}"
